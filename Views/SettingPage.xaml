<Page x:Class="FishRandomSelector.core.Views.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FishRandomSelector.core.Views"
      xmlns:controls ="clr-namespace:FishRandomSelector.core.Resource"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="{DynamicResource MaterialDesignPaper}"
      Title="SettingPage"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal" 
      TextOptions.TextRenderingMode="Auto"
      FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <StackPanel>
            <controls:ASetting x:Name="OpenLeftArea" NameColor="Yellow" SettingName="是否打开侧边栏" HelpText="启用后会导致点击抽取按钮后关闭左侧区域"  HorizontalAlignment="Left" CheckChanged="ASetting_CheckChanged"/>
        </StackPanel>
        
    </Grid>
</Page>
